<script type="text/ng-template" id="row">
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{object.title}}</span>
          <p>{{object.description}}</p>
          <hr/>
          <span class="left">
              Autor: {{object.profile.name}}
            </span>
          <span class="right">{{object.created_at | date : 'd/M/yy HH:mm'}}</span>
        </div>
        <div class="card-action">
          <% if current_user %>
              <%= button_tag I18n.t('actions.edit'), 'ng-click': 'editObject(object)',
                class: 'btn btn-primary btn-xs',
                'ng-show': "#{current_user.profile.id}==object.profile.id" %>
              <%= button_tag I18n.t('actions.destroy'), 'ng-click': 'destroyObject(object, $index)',
                class: 'btn btn-danger btn-xs',
                'ng-show': "#{current_user.profile.id}==object.profile.id" %>
              <%= link_to I18n.t('actions.follow'), '#!', class:'btn btn-info',
                'ng-show': show_follow,
                'ng-click': 'follow(object.profile.id)'
              %>
              <%= label_tag '', I18n.t('actions.following'),
                class: 'label label-success pull-right',
                  'ng-show': show_following
              %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</script>
