<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :post_description %>
  </div>

  <div class="actions">
    <%= form.submit I18n.t('active_record.models.post.actions.post'),
      class: 'waves-effect waves-light btn' if ['edit', 'new'].include?(params['action']) %>
    <%= link_to I18n.t('active_record.models.post.actions.show'),
      @post, class: 'waves-effect waves-light btn' if ['edit'].include?(params['action']) %>
    <%= link_to I18n.t('active_record.models.post.actions.back'),
      posts_path, class: 'waves-effect waves-light btn' %>
  </div>
<% end %>
