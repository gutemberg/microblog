<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= post.title %></span>
        <p><%= post.description %></p>
        <hr/>
        <span class="left">
              Author: <%= post.profile.name if post.profile %>
            </span>
        <span class="right"><%= I18n.l(post.created_at, format: :short) %></span>
      </div>
      <div class="card-action">
        <% if current_user %>
            <%= link_to I18n.t('active_record.models.post.actions.edit'),
              edit_post_path(post) if current_user.profile == post.profile %>
            <%= link_to I18n.t('active_record.models.post.actions.destroy'), post,
              method: :delete,
              data: { confirm: 'Are you sure?' } if current_user.profile == post.profile  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
