<h1><%= I18n.t('active_record.models.profile.title.model') %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong><%= I18n.t('active_record.models.profile.attributes.name') %>:</strong>
  <%= @profile.name %>

<h3><%= I18n.t('active_record.models.post.title.posts') %></h3>
<% @profile.posts.each do |post| %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= post.title %></span>
            <p><%= post.description %></p>
            <span class="right"><%= I18n.l(post.created_at, format: :short) %></span>
          </div>
        </div>
      </div>
    </div>
<% end %>
</p>

<% if current_user && current_user.profile == @profile %>
    <%= link_to I18n.t('active_record.models.profile.actions.edit'), edit_profile_path(@profile),
      class: 'waves-effect waves-light btn'%>
<% end %>
<%= link_to I18n.t('active_record.models.profile.actions.back'), profiles_path,
  class: 'waves-effect waves-light btn' %>
